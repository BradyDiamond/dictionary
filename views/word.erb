<h4>Word Name: "<%= @word.name %>"</h4>

<h3>Definitions</h3>

  <% if @word.definitions. %>
    <ul>
      <% @word.definitions.each do |definition| %>
        <li><a href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.body %></a></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no definitions listed for this word yet.</p>
  <% end %>

<h4>Add a definition:</h4>

<form action="/words/<%= @word.id %>/definitions" method="post">
  <div class="form-group">
    <label for="def_body">Definition</label>
    <input id="def_body" name="def_body" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Add a definition</button>
</form>

<p><a href="/words/<%= @word.id %>/edit">Edit word</a></p>
<a href="/words">Return to word list</a>